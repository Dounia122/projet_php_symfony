{% extends 'base.html.twig' %}

{% block title %}Formulaire de Contact{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-7">
        <!-- Alerts -->
        {% if app.flashes %}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-custom alert-{{ label }} alert-dismissible fade show mb-4" role="alert">
                        {% if label == 'success' %}
                            <i class="fas fa-check-circle me-2"></i>
                        {% else %}
                            <i class="fas fa-exclamation-circle me-2"></i>
                        {% endif %}
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <!-- Main Card -->
        <div class="card-modern">
            <!-- Header -->
            <div class="card-header-custom">
                <h1><i class="fas fa-envelope-open-text me-3"></i>Nous contacter</h1>
                <div class="subtitle">
                    <i class="fas fa-info-circle me-2"></i>
                    Envoyez-nous votre message et nous vous répondrons rapidement
                </div>
            </div>

            <!-- Body -->
            <div class="card-body p-4">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <!-- Name Field -->
                    <div class="mb-4">
                        <label for="{{ form.name.vars.id }}" class="form-label">
                            <i class="fas fa-user text-primary me-2"></i>{{ form.name.vars.label }}
                        </label>
                        <div class="icon-input">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {% if form.name.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                <i class="fas fa-times-circle me-2"></i>
                                {{ form_errors(form.name) }}
                            </div>
                        {% endif %}
                        <small class="d-block text-muted mt-2">
                            <i class="fas fa-check-circle text-success me-1"></i>Minimum 2 caractères
                        </small>
                    </div>

                    <!-- Email Field -->
                    <div class="mb-4">
                        <label for="{{ form.email.vars.id }}" class="form-label">
                            <i class="fas fa-envelope text-primary me-2"></i>{{ form.email.vars.label }}
                        </label>
                        <div class="icon-input">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {% if form.email.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                <i class="fas fa-times-circle me-2"></i>
                                {{ form_errors(form.email) }}
                            </div>
                        {% endif %}
                        <small class="d-block text-muted mt-2">
                            <i class="fas fa-check-circle text-success me-1"></i>Nous garderons votre email confidentiel
                        </small>
                    </div>

                    <!-- Message Field -->
                    <div class="mb-4">
                        <label for="{{ form.message.vars.id }}" class="form-label">
                            <i class="fas fa-comment-dots text-primary me-2"></i>{{ form.message.vars.label }}
                        </label>
                        {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': '6'}}) }}
                        {% if form.message.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                <i class="fas fa-times-circle me-2"></i>
                                {{ form_errors(form.message) }}
                            </div>
                        {% endif %}
                        <small class="d-block text-muted mt-2">
                            <i class="fas fa-check-circle text-success me-1"></i>Entre 10 et 5000 caractères
                        </small>
                    </div>

                    <hr class="divider-custom">

                    <!-- Buttons -->
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-submit flex-grow-1">
                            <i class="fas fa-paper-plane me-2"></i>Envoyer mon message
                        </button>
                        <a href="{{ path('app_contacts_list') }}" class="btn btn-secondary-custom">
                            <i class="fas fa-list me-2"></i>Messages
                        </a>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>

        <!-- Info Cards -->
        <div class="row g-3 mt-4">
            <div class="col-md-6">
                <div class="stats-box">
                    <i class="fas fa-clock fa-2x mb-2"></i>
                    <h5>Réponse rapide</h5>
                    <p class="mb-0">Nous répondons en moins de 24h</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="stats-box">
                    <i class="fas fa-shield-alt fa-2x mb-2"></i>
                    <h5>Sécurisé</h5>
                    <p class="mb-0">Vos données sont protégées</p>
                </div>
            </div>
        </div>

        <!-- Professional Badge -->
        <div class="alert alert-custom alert-info mt-4" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1)); border-left: 4px solid var(--primary-color);">
            <div class="text-center">
                <i class="fas fa-certificate me-2" style="color: var(--primary-color);"></i>
                <strong>Contact v1.0</strong>
                <br>
                <small style="opacity: 0.9;">
                    Plateforme professionnelle certifiée pour la gestion des contacts
                </small>
            </div>
        </div>
    </div>
</div>
{% endblock %}
